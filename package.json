{
  "name": "tfdocs-code",
  "displayName": "tfdocs",
  "description": "Look up definitions of Terraform resources in your browser",
  "version": "1.0.0",
  "publisher": "tfdocs",
  "icon": "images/icon.png",
  "license": "MIT",
  "keywords": [
    "terraform",
    "documentation",
    "docs",
    "definitions",
    "resource",
    "module",
    "registry"
  ],
  "bugs": {
    "url": "https://github.com/MattFelice/tfdocs/issues"
  },
  "galleryBanner": {
    "color": "#56288e",
    "theme": "dark"
  },
  "author": {
    "name": "Matt Felice"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MattFelice/tfdocs"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:terraform"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tfdocs.lookupResource",
        "title": "Look up Terraform resource"
      }
    ],
    "configuration": {
      "title": "tfdocs",
      "properties": {
        "tfdocs.initTool": {
          "type": "string",
          "default": "terraform",
          "enum": [
            "terraform",
            "tofu"
          ],
          "enumDescriptions": [
            "Use Terraform for initialization",
            "Use OpenTofu for initialization"
          ],
          "description": "Specify which tool to use for initialization when .terraform.lock.hcl is missing"
        },
        "tfdocs.enableColorizer": {
          "type": "boolean",
          "default": false,
          "description": "Enable color output in Terraform/OpenTofu commands (removes -no-color flag)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish",
    "vsce": "vsce",
    "format": "prettier --write src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.0",
    "eslint": "^9.21.0",
    "prettier": "^3.6.2",
    "typescript": "^5.7.3"
  }
}
